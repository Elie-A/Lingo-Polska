{
    "version": 2,
    "builds": [
        {
            "src": "src/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "src/client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/src/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/src/client/build/index.html"
        }
    ],
    "env": {
        "MONGO_URI": "@mongo_uri",
        "FRONTEND_URL": "@frontend_url",
        "NODE_ENV": "production"
    }
}